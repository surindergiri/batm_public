<extensions>
    <extension class="com.generalbytes.batm.server.extensions.extra.bitcoin.BitcoinExtension">
        <ratesource prefix="mrcoin" name="MrCoin.eu">
            <cryptocurrency>bizz</cryptocurrency>
        </ratesource>
        <ratesource prefix="fixprice" name="Fix Price Universal">
            <param name="price"/>
            <param name="fiatcurrency"/>
            <cryptocurrency>bizz</cryptocurrency>
        </ratesource>
        <ratesource prefix="coingecko" name="CoinGecko.com">
            <param name="fiatcurrency"/>
            <cryptocurrency>bizzcoin</cryptocurrency>
        </ratesource>
        <ratesource prefix="coinpaprika" name="CoinPaprika.com">
            <param name="fiatcurrency"/>
            <cryptocurrency>bizz</cryptocurrency>
        </ratesource>
    </extension>
    <extension class="com.generalbytes.batm.server.extensions.extra.bitcoincash.BitcoinCashExtension">
        <ratesource prefix="telr" name="Telr.io Rate Source">
            <param name="address"/>
            <param name="secret"/>
            <param name="signature"/>
            <cryptocurrency>bizz</cryptocurrency>
            <help>
                Over 100+ crypto rates can be sourced directly from the Telr DeFi Network. Recommended for Telr Gatekeeper and Telr Cash operators.
            </help>
        </ratesource>
        <wallet prefix="telr_cash" name="Telr.io Cash Wallet (stable base coins)">
            <param name="address"/>
            <param name="secret"/>
            <param name="signature"/>
            <cryptocurrency>bizz</cryptocurrency>
            <help>
                Telr Cash is a non-custodial, stablecoin "hot" wallet with access to over 100+ cryptos.
            </help>
        </wallet>
    </extension>
    <extension class="com.generalbytes.batm.server.extensions.extra.ethereum.EthereumExtension">
        <wallet prefix="infuraERC20_BIZZ_8_0x7a8ca2f815a260660158a38c34ca321a3605ecfe" name="Infura.io wallet - BIZZ">
            <!--
             Hint: infuraERC20_TOKENSYMBOL_DECIMALPLACES_CONTRACTADDRESS
            -->
            <param name="projectId"/>
            <param name="mnemonic"/>
            <param name="gaslimit"/>
            <help>
                Mnemonic should be 24 words delimited by spaces. gaslimit is optional
            </help>
            <cryptocurrency buyonly="true">bizz</cryptocurrency>
        </wallet>
        <cryptologo cryptocurrency="bizz" file="bizz.png"/>
        <cryptologo cryptocurrency="bizz" file="bizz.svg"/>
        <!--
         ADD your ERC20 tokens here. And don't forget to add cryptologos.
        -->
    </extension>
</extensions>